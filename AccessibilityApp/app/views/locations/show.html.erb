<%= render 'layouts/header' %>
<style type="text/css">
   #map {
      width: 100%;
      height: 500px;
    }
    .top-buffer { margin-top: 100px; }
    .title { font-size: 48px; }
</style>
<p id="notice"><%= notice %></p>

<div class="container">
	<div class="row">
		<div class="col-md-4">
		</div>
		<div class="col-md-4 text-center title">
			<%= @location.name %>
		</div>
		<div class="col-md-4">
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<h3>Accessibility Information</h3>
			<p>Door Width: <%= @location.door_width %></p>
			<p>Bathroom Accessibility: <%= @location.bathroom_accessibility %></p>
			<p>Table Heights:<%= @location.table_heights %></p>
			<p>Additional Comments: <%= @location.additional_comments %></p>
		</div>
		<div class="col-md-8">
			<div id="map"></div>
	    <script>
	      function initMap() {
	        var uluru = {lat: <%= @location.lat %>, lng: <%= @location.long %>};
	        var map = new google.maps.Map(document.getElementById('map'), {
	          zoom: 15,
	          center: uluru
	        });
	        var marker = new google.maps.Marker({
	          position: uluru,
	          map: map
	        });
	      }
	    </script>
	    <script async defer
	    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBlRox9uSxIpBLkHVsPtx2pDBXK32evMuE&callback=initMap">
	    </script>
		</div>
</div>


